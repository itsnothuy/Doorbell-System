# EditorConfig helps maintain consistent coding styles
# See: https://editorconfig.org/

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files
[*.toml]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Dockerfile
[Dockerfile*]
indent_size = 2

# HTML/CSS/JavaScript
[*.{html,css,js,ts}]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 4

# Configuration files
[*.{cfg,ini}]
indent_size = 4

# Makefile (requires tabs)
[Makefile]
indent_style = tab
indent_size = 4

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Docker Compose
[docker-compose*.{yml,yaml}]
indent_size = 2